{
  "name": "react-module-boilerplate",
  "version": "0.0.1",
  "engines": {
    "node": "5.x"
  },
  "description": "Boilerplate for ReactJS",
  "scripts": {
    "start": "node server.js",
    "test": "mocha -w tests/helpers/browser.js tests/**/*.spec.js",
    "build:prod": "NODE_ENV=production webpack -p --config webpack.prod.config.js",
    "server:prod": "NODE_ENV=production node server.js",
    "lint": "eslint src",
    "clean": "rimraf dist",
    "build": "npm run clean && npm run build:prod",
    "postinstall": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/vs-zhang/react-module-boilerplate.git"
  },
  "keywords": [
    "react",
    "reactjs",
    "boilerplate",
    "hot",
    "reload",
    "hmr",
    "live",
    "edit",
    "webpack"
  ],
  "author": "Vincent (http://github.com/vs-zhang)",
  "license": "MIT",
  "homepage": "https://github.com/vs-zhang/react-module-boilerplate",
  "devDependencies": {
    "chai": "^3.5.0",
    "enzyme": "^2.3.0",
    "eslint": "^2.9.0",
    "eslint-config-airbnb": "^9.0.1",
    "eslint-loader": "^1.3.0",
    "eslint-plugin-import": "^1.8.1",
    "eslint-plugin-jsx-a11y": "^1.2.2",
    "eslint-plugin-react": "^5.0.1",
    "jsdom": "^9.2.1",
    "mocha": "^2.5.3",
    "react-addons-test-utils": "^15.1.0",
    "react-hot-loader": "^1.3.0",
    "redux-devtools": "^3.3.1",
    "redux-devtools-dock-monitor": "^1.1.1",
    "redux-devtools-log-monitor": "^1.0.11",
    "sinon": "^1.17.4",
    "webpack-dev-server": "^1.12.1"
  },
  "dependencies": {
    "babel-core": "^6.9.1",
    "babel-eslint": "^6.0.4",
    "babel-loader": "^6.2.4",
    "babel-preset-airbnb": "^2.0.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-0": "^6.5.0",
    "css-loader": "^0.23.1",
    "express": "^4.13.4",
    "extract-text-webpack-plugin": "^1.0.1",
    "html-webpack-plugin": "^2.17.0",
    "node-sass": "^3.7.0",
    "react": "^15.1.0",
    "react-css-modules": "^3.7.6",
    "react-dom": "^15.1.0",
    "react-redux": "^4.4.5",
    "react-router": "^2.4.1",
    "react-router-redux": "^4.0.4",
    "redux": "^3.5.2",
    "rimraf": "^2.5.2",
    "sass-loader": "^3.2.0",
    "style-loader": "^0.13.1",
    "webpack": "^1.12.2"
  }
}
